{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,

    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "types": ["node", "jest"],

    "lib": ["es2017"],
    "rootDir": "./src",
    "outDir": "./build",

    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
