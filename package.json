  "description": "Postways Transmit Server",
  "main": "src/index.js",
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch:ts\" \"yarn serve-dev\"",
    "serve-dev": "nodemon --inspect dist/index.js",
    "watch:node": "nodemon dist/index.js",
    "watch:ts": "tsc -w *.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch --no-coverage",
    "start": "node src/index.js",
    "dist": "tsc"
  },
  "dependencies": {
    "@northern/di": "^1.0.3",
    "@types/jest": "^24.0.5",
    "aws-sdk": "^2.252.1",
    "chalk": "^2.4.1",
    "concurrently": "^4.1.0",
    "http-status-codes": "^1.3.0",
    "jsonschema": "^1.2.4",
    "koa": "^2.7.0",
    "lodash": "^4.17.10",
    "morgan": "^1.9.0",
    "mysql2": "^1.5.3",
    "nodemailer": "^4.6.7",
    "twig": "^1.12.0",
    "typescript": "^3.3.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/mocha": "^5.2.6",
    "@types/uuid": "^3.4.4",
    "chai": "^4.1.2",
    "dotenv": "^6.0.0",
    "grunt": "^1.0.3",
    "grunt-cli": "^1.2.0",
    "jest": "^23.1.0",
    "nodemon": "^1.17.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2"
  }
}
